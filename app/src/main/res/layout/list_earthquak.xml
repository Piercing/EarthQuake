<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for a single eartquak list item -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="48dp"
              android:baselineAligned="false"
              android:gravity="center_vertical"
              android:minHeight="?android:attr/listPreferredItemHeight"
              android:orientation="horizontal"
              android:padding="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/minHeight_list_item"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/magnitude"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:textSize="@dimen/text_size_list_item"
            tools:text="7.7"/>

        <TextView
            android:id="@+id/location_offset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_list_item"
            tools:text="New York City"/>

        <TextView
            android:id="@+id/location_primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:textSize="@dimen/text_size_list_item"
            tools:text="New York City"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.25"
            android:textAlignment="textStart"
            android:textSize="@dimen/text_size_list_item"
            tools:text="March 13, 2017"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.15"
            android:textAlignment="textEnd"
            android:textSize="@dimen/text_size_list_item"
            tools:text="22:00"/>

    </LinearLayout>

</LinearLayout>